@using MvcBooks.Models;
<!DOCTYPE html>

<html>
<head>
    <title>Book By Category</title>
</head>
<body>
    <h2>Books By Category</h2>
    @foreach (Category cat in ViewBag.DB.cats)
    {
        @string.Format("{0} {1}", cat.CategoryId, cat.Description) <br />
        foreach (string title in ViewBag.DB.TitlesInCat(cat.CategoryId))
        {
            @title @:<br/>
        }
        @:<br/>
    }
</body>
</html>
